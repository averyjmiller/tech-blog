<div class="selected-post" id="{{post.id}}">
  <section class="card">
    <div class="card-header">
      <h3 class="post-title">{{post.title}}</h3>
      <div class="post-date">Posted by {{post.user.username}} on {{post.createdAt}}</div>
    </div>
    <p class="post-content">{{post.content}}</p>
  </section>
</div>
<section class="card">
  <div class="card-header">
    <h3 class="card-title"></h3>
  </div>
  <div class="card-content">
    <form class="post-form">
      <label for="form-content">Comment</label>
      <textarea id="form-content"></textarea>
      <button class="submit-btn" id="submit-btn" type="submit">Submit</button>
    </form>
  </div>
</section>
{{#each post.comments as |comment|}}
{{> comment-details}}
{{/each}}
<script src="/js/comment.js"></script>
